<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/try_background"
    tools:context="com.tcs.remindmeapplication.activities.RM_Launch_Activity">


    <!--android:background="@drawable/gradient"-->

    <ImageView
        android:layout_marginTop="50dp"
        android:background="@drawable/main_logo"
        android:layout_centerHorizontal="true"
        android:layout_width="110dp"
        android:layout_height="110dp"/>

    <RelativeLayout
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/rm_registration_buton"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_action_registration"
            android:layout_width="120dp"
            android:textSize="10sp"
            android:layout_marginRight="10dp"
            android:text="Registration"
            android:drawablePadding="-15sp"
            android:textColor="@color/teal_50"
            android:layout_height="110dp" />
        <Button
            android:id="@+id/rm_login_button"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:textSize="10sp"
            android:drawableTop="@drawable/ic_action_login_new"
            android:drawablePadding="-15sp"
            android:background="@android:color/transparent"
            android:text="Login"
            android:textColor="@color/teal_50"
            android:layout_toRightOf="@id/rm_registration_buton"/>
        <Button
            android:id="@+id/rm_reset_password_button"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:drawableTop="@drawable/ic_action_reset"
            android:background="@android:color/transparent"
            android:drawablePadding="0sp"
            android:textSize="10sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/teal_50"
            android:text="Reset Password"
            android:layout_below="@id/rm_registration_buton"/>
        <Button
            android:id="@+id/rm_delete_account_button"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:textColor="@color/teal_50"
            android:textSize="10sp"
            android:drawableTop="@drawable/ic_action_del"
            android:background="@android:color/transparent"
            android:text="Delete Account"
            android:layout_below="@id/rm_login_button"
            android:layout_toRightOf="@id/rm_reset_password_button"/>

    </RelativeLayout>
</RelativeLayout>
