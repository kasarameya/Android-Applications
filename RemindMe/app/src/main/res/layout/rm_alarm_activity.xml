<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.tcs.remindmeapplication.activities.RM_Alarm_Activity">




    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Name"
        android:textSize="20dp"
        android:textColor="@color/teal_50"
        android:layout_below="@+id/iv_alarm"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_alarm_taskName"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Description"
        android:textSize="20dp"
        android:textColor="@color/teal_50"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_alarm_taskDescription"
        android:layout_below="@+id/tv_alarm_taskName"
        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="220dp"
        android:id="@+id/iv_alarm"
        android:src="@drawable/try_alarm_image"
        style="@style/Animation"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:textColor="@color/teal_A400"
        android:background="@drawable/button_default_bg"
        android:id="@+id/button_alarm_stopTask"
        android:layout_below="@+id/tv_alarm_taskDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />
</RelativeLayout>
